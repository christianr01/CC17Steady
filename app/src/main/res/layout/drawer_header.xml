    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STEADY"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="33sp"
        android:fontFamily="@font/galano_bold" />

</LinearLayout>